<!-- Incluir o head -->
<%- include('./partials/head', {title: "Quadro de Avisos"}) %> 
<body>
<!-- Menu -->
<%- include('./partials/navbar') %> 

  <div class="container">

    <% avisos.forEach(aviso => { %>
      <div class="card shadow mt-4">
        <div class="card-header bg-purple text-white pl-5 p-4 d-flex align-items-center justify-content-between">
          <h2><i class="fas fa-exclamation-circle"></i> <%= aviso.titulo %> </h2>
          <h3 class="lead"><%= moment(aviso.data).format("DD/MM/YYYY") %></h3>
        </div>
        <div class="card-body p-5">
          <!--info perfil-->
          <div class="d-flex align-items-center">
            <img src="img/felpsCortado.png" class="img-thumbnail rounded-circle" width="80">
            <div class="ml-3">
              <div class="font-weight-bold">Felps Cortado</div>
              <div class="text-secondary"> <%= moment(aviso.data, "YYYYMMDD").fromNow();%>  </div>
            </div>
          </div>
  
          <!--descrição do aviso-->
          <div class="mt-4">
            <%= aviso.mensagem %>
          </div>
  
        </div><!--card-body-->
      </div><!--card--> 

    <% }) %>


    

  </div><!--container-->

  <%- include('./partials/scripts_import') %> 
</body>
</html>
